<h1>Zombies</h1>

<ul>
  <%- @zombies.each do |zombie| %>
    <li><%= link_to zombie.name, zombie %> <%= link_to("edit " + zombie.name,edit_zombie_path(zombie)) %> <%= link_to "Delete", zombie_path(zombie), :method=>:delete, :confirm => "Are you sure?", :id => "delete_"+zombie.id.to_s %></li>
  <% end %> 
</ul>
